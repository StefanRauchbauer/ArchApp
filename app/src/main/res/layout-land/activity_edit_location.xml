<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".views.map.SiteMapView">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/appBarLayout2">

        <include
                layout="@layout/app_toolbar"
                android:id="@+id/edit_toolbar">
        </include>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.gms.maps.MapView
            android:id="@+id/edit_location_mapView"
            android:layout_width="665dp"
            android:layout_height="278dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_tv2"
            app:layout_constraintVertical_bias="0.822"/>
    <TextView
            android:text="Lat:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tv1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="172dp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/edit_tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tv_lat" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/edit_tv1"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Lng:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tv2" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/edit_tv_lat"
            android:layout_marginStart="96dp"/>
    <TextView
            android:text="@string/edit_tv_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_tv_lng" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/edit_tv2"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.004"/>
</androidx.constraintlayout.widget.ConstraintLayout>

